{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@stores/*": [ "./src/app/stores/*" ],
      "@models/*": [ "./src/app/models/*" ],
      "@services/*": [ "./src/app/services/*" ],
      "@modules/*": [ "./src/app/modules/*" ],
      "@root/*": [ "./src/*" ]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
